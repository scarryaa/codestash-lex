{
  "lexicon": 1,
  "id": "org.codestash.repository.getRepository",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get information about a repository.",
      "parameters": {
        "type": "params",
        "required": ["repository"],
        "properties": {
          "repository": {
            "type": "string",
            "format": "uri",
            "description": "URL of the repository to fetch."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "ref",
          "ref": "org.codestash.repository.defs#repository"
        }
      }
    }
  }
}